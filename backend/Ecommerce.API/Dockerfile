# üß© Etapa 1: Compilaci√≥n
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copiar todos los archivos desde la ra√≠z del proyecto actual (Render ya est√° en backend/Ecommerce.API)
COPY . .

# Restaurar dependencias del proyecto principal
RUN dotnet restore Ecommerce.API.csproj

# Compilar y publicar
RUN dotnet publish Ecommerce.API.csproj -c Release -o /app/out

# üß© Etapa 2: Runtime (m√°s ligera)
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app/out .

# Configuraci√≥n de entorno
EXPOSE 8080
ENV ASPNETCORE_URLS=http://+:8080
ENV ASPNETCORE_ENVIRONMENT=Production

# Comando de inicio
ENTRYPOINT ["dotnet", "Ecommerce.API.dll"]
